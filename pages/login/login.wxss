/* pages/login/login.wxss */
.header {
  margin: 90rpx 0 90rpx 50rpx;
  border-bottom: 1px solid #ccc;
  text-align: center;
  width: 650rpx;
  height: 300rpx;
  line-height: 450rpx;
}

.header image {
  width: 150rpx;
  height: 150rpx;
}
.content {
  margin-left: 50rpx;
  margin-bottom: 90rpx;
}
.content text {
  display: block;
  color: #9d9d9d;
  margin-top: 30rpx;
}
.btnAuth {
  border-radius: 80rpx;
  font-size: 35rpx;
  width: 500rpx;
}
.backView{
  display: flex;
  align-items: center;
  justify-content: center;
}
.backImage{
  position:absolute;
  top:0px;
  bottom: 0px;
  left:0px;
  width: 100%;
  height:100%;
}
.btnStart{
  z-index: 1;
  width:600rpx;
  margin-top: 600rpx;
  background: rgb(242, 67, 122); 
  color: white;
  font-size: 40rpx;
  font-weight: bold;
  font-stretch:condensed;
  border-radius: 30rpx;
}
