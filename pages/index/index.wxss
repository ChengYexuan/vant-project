/**index.wxss**/
.home-wrap{
  background: #f2f2f2;
}
.banner{
  width: 100%;
  height: 300rpx;
}
.scroll-txt{
  text-align: center;
  background: #fff; 
  margin: 10rpx 0;
  padding: 10rpx 0 15rpx 0;
  color: #333;
}
.scroll-ads{
  text-align: center;
  font-size: 20rpx;
}
.ads-list{
  display: flex;
  flex-direction: row;
  flex:1;
  margin-bottom: 1rpx;
}
.ads-item{
  flex:1;
}
.sub-banner{
  width: 100%;
  height: 120px;
}
.workbench{
  font-size: 20rpx;
  background: #fff;
  padding-bottom: 30rpx;
  margin-bottom:10rpx;
  color: #333;
}
.workbench .title{
  font-size:24rpx;
  padding: 20rpx 20rpx;
  margin-bottom: 40rpx;
  display: block;
}
.workbench .list{
  display: flex;
  flex-direction: row;
  flex:1;
}
.workbench .items{
  width: 100rpx;
  flex:1;
  text-align: center;
}
.workbench .items image{
  width: 100rpx;
  height: 100rpx;
}
.workbench .items image.service-icon{
  width: 50rpx;
  height: 50rpx;
}
.workbench .items text{
  display: block;
  text-align: center;
  margin-top: 10rpx;
}
.workbench .pressure{
  display: flex;
  flex-direction: row;
}
.workbench .pressure text{
  font-size: 25rpx;
  display: block;
  text-align: center;
  margin-left: 10rpx;
}
.workbench .pressure image{
  margin-left: 30rpx;
  margin-top: -20rpx;
  width: 60rpx;
  height: 60rpx;
}
.picker{
  color: rgb(75, 64, 64);
  font-size: 30rpx;
  padding-left: 200rpx;
  margin-top: -5rpx;
}
.btn1{
  width: 110rpx;
  height: 110rpx;
  background-color: rgb(157, 208, 205);
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.btn2{
  width: 110rpx;
  height: 110rpx;
  background-color: rgb(142, 189, 215);
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.btn3{
  width: 110rpx;
  height: 110rpx;
  background-color: rgb(142, 169, 215);
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.btnImg {
  width: 75rpx !important;
  height: 75rpx !important;
}
.btn1::after {  border: 0; }
.btn2::after {  border: 0; }
.btn3::after {  border: 0; }

.submitBP{
  display: flex;
  flex-direction: row-reverse;
}
.txtSubmitBP{
  font-size: 30rpx;
  margin-top: 15rpx;
}
.btnSubmitBP{
  width: 120rpx;
  height: 60rpx;
  margin-right: 10rpx;
  background-color: white;
}
.btnImgSubmitBP{
  width: 80rpx !important;
  height: 80rpx !important;
}
.btnSubmitBP::after{  border: 0;}
.swiper{  width: 100%;}
.imgSwiper{  width: 100%;}
.scroll{
  text-align: center;
  background: #fff; 
  margin: 10rpx 0;
  padding: 10rpx 0 15rpx 0;
  color: #333;
}
.scrollText{
  text-align: center;
  font-size: 20rpx;
}
.blockBMI {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  font-size: 30rpx;
  margin-top: 15rpx;
}
.item {
  height: 100rpx;
  width: 120rpx;
  text-align: center;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
}
.item1{ padding-left: 40rpx;}
.item3{ padding-right: 40rpx;}
.line{
  margin-top: 10rpx;
  width: 3rpx;
  height: 70rpx;
  background-color: rgb(99,66,99);
}
.text1{
  font-size: 30rpx;
  color: rgb(66,66,66);
}
.text2{ 
  margin-top: 10rpx;
  font-size: 28rpx;
  color: rgb(99,99,99);
}

 
.header {
  margin: 90rpx 0 90rpx 50rpx;
  border-bottom: 1px solid #ccc;
  text-align: center;
  width: 650rpx;
  height: 300rpx;
  line-height: 450rpx;
}

.header image {
  width: 150rpx;
  height: 150rpx;
}
.content {
  margin-left: 50rpx;
  margin-bottom: 90rpx;
}
.content text {
  display: block;
  color: #9d9d9d;
  margin-top: 30rpx;
}
.btnAuth {
  border-radius: 90rpx;
  font-size: 35rpx;
  width: 500rpx;
}
 